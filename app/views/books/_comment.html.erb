<% book.book_comments.each do |book_comment| %>
<tr class="show-comment">
  <td>
    <%= link_to user_path(book_comment.user) do %>
    <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no-image-mini.jpg", size: "50x50" %><br>
    <%= book_comment.user.name %>
    <% end %>
  </td>
  <td><%= book_comment.comment %></td>
  <% if current_user == book_comment.user %>
  <td><%= link_to 'Destroy', book_book_comment_path(book, book_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
  <% end %>
</tr>
<% end %>